{
  "name": "SmartPay",
  "version": "1.0",
  "manifest_version": 2,
  "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  ,
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://shopee.sg/checkout/*"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "16": "card.png",
      "24": "card.png",
      "32": "card.png"
    },
    "default_popup": "popup.html",
    "default_title": "SmartPay"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js; object-src 'self'",
  "permissions": [
    "tabs", "https://shopee.sg/checkout/*"
  ]
}